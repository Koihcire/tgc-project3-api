{{#extends "base"}}
{{#block "content"}}
<div class="container">
<h1>Users</h1>
<a href="/users/register" class="btn btn-sm my-btn">Add User</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.username}}</td>
            <td>{{this.email}}</td>
            <td>{{this.role.role}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

{{/block}}
{{/extends}}