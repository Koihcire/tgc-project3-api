{{#extends "base"}}
{{#block "content"}}
<h1>Products</h1>

<div>
    <h2>Search</h2>
    <form method="GET">
        {{{form}}}
        <input type="submit" class="btn btn-sm btn-primary mt-2"/>
    </form>
</div>

<a href="/products/create" class="btn btn-primary btn-sm mt-3">Add New Product</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product</th>
            <th>Brand</th>
            <th>Cost</th>
            <th>Date Created</th>
            <th>Stock</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.product}}</td>
            <td>{{this.brand.brand}}</td>
            <td>${{divide this.cost 100}}</td>
            <td>{{moment this.created_date format='YYYY-MM-DD'}}</td>
            <td>{{this.stock}}</td>
            <td><img src="{{this.product_thumbnail_url}}"></td>
            <td><a href="/products/{{this.id}}" class="btn btn-primary btn-sm me-2">View</a><a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}
{{/extends}}