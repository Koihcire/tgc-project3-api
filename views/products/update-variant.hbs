{{#extends "base"}}
{{#block "content"}}

<h1>Update Variant</h1>
<form method="POST">
    {{{form}}}
    {{!-- cloudinary --}}
    <div>
        {{#if variant.variant_image_url}}
        <img src="{{variant.variant_image_url}}" id="uploaded_image" class="mt-3" style="width: 600px"/>
        <div>
            <a href="#" class="btn btn-primary btn-sm mt-2" id="upload_widget">Change Image</a>
        </div>

        {{else}}
        <img src="" style="display:none" id="uploaded_image" />
        <div>
            <a href="#" class="btn btn-primary btn-sm mt-2" id="upload_widget">Upload</a>
        </div>

        {{/if}}
    </div>
    <input type="submit" value="Update Variant"  class="btn btn-primary btn-sm mt-2"/>
</form>
{{/block}}

{{#block 'js'}}
{{>cloudinaryJs imageId='#id_variant_image_url' thumbnailId='#id_variant_thumbnail_url'}}
{{/block}}

{{/extends}}